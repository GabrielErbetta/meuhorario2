    <%= image_tag 'meuhorario.jpg' %>
  </div>
</div>

<div class="row">
  <ul class="tabs small-up-5 text-center" data-tabs id="areaTabs">
    <li class="column no-padding tabs-title is-active"><a href="#areaTab1" aria-selected="true">Área 1</a></li>
