</div>
<% unless @courses.blank? %>
  <div class="row">
    <div class="tabs-content" data-tabs-content="areaTabs">
      <div class="tabs-panel is-active" id="areaTab1">
        <% @courses[1].each do |course| %>
          <p class="no-margin"><a href="<%= course_page_path course.code %>"><%= "#{course.code} - #{course.name}" %></a></p>
        <% end %>
      </div>
      <div class="tabs-panel" id="areaTab2">
