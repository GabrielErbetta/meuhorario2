source 'https://rubygems.org'
ruby '3.1.4'

# CORE
# Rails is self-explanatory
gem 'rails',            '~> 7.0.8'
# Listens to file changes
gem 'listen',           '~> 3.7.1'
# PostgreSQL db client for ActiveRecord
gem 'pg',               '~> 1.3.5'
# Web server for the app
gem 'puma',             '~> 5.6.9'
# Timezones database, overrides legacy OS timezone database
gem 'tzinfo-data',      '>= 1'
# Allows nokogiri to interact with scrapped pages
gem 'mechanize',        '~> 2.9.1'
# Adds a progress bar that is used in scraping
gem 'ruby-progressbar', '~> 1.13.0'

# ASSETS
# Compiles assets for production
gem 'sprockets-rails', '~> 3.4.2'
# Compiles Sass code into css
gem 'sass-rails',      '~> 6.0.0'
# Minifies JS code
gem 'uglifier',        '~> 4.2.0'

# FRONT END
# Turbolinks makes pages change without a full reload
gem 'turbolinks',   '~> 5.2.1'
# Jquery but as a gem
gem 'jquery-rails', '~> 4.4.0'
# Google Recaptcha for contact form
gem 'recaptcha',    '~> 5.10.1'

# PDF GENERATION
# Generates pdf files from html pages
gem 'wicked_pdf',   '~> 1.4.0'
